{{>venta/navigation}}
<div class="col-md-8">

  <div class="row" style="border-top-width: 1px; border-color: #e3ded1; border-top-style: solid;">
    <section class="content">
      <div class="container-fluid">
        <div class="row">
          <div class="col-12">



            <!-- Main content -->
            <div class="invoice p-3 mb-3">
              <!-- title row -->

              <!-- info row -->
              <div class="row invoice-info">

                <!-- /.col -->
                <div class="col-sm-4 invoice-col">

                  <address>
                    {{#each persona}}
                    <strong>{{nombre}} {{apellido}}</strong><br>
                    Direccion:{{direccion}}<br>
                    Ciudad:  {{ciudad}}<br>
                    celular: (505) {{celular}}<br>
                    Telefono:{{telefono}}<br>
                  </address>
                  {{/each}}
                </div>
                <!-- /.col -->
                <div class="col-sm-4 invoice-col">
                  {{#each cod}}
                  <b>Factura #{{id}}</b>
                  <br>
                  <b>Numero de Pedido:</b> {{id}}<br>
                  <b>Fecha del Pedido:</b> {{fecha}}<br>

                  {{/each}}
                  {{#each estado}}
                  <b>Estado:{{nombre}}</b>
                  {{/each}}
                </div>
                <!-- /.col -->
              </div>
              <!-- /.row -->

              <!-- Table row -->
              <div class="row">
                <div class="col-12 table-responsive">
                  <table class="table table-striped">
                    <thead>

                      <tr>

                        <th>Cantidad</th>
                        <th>Imagen</th>
                        <th>Nombre</th>

                        <th>Subtotal</th>
                      </tr>

                    </thead>
                    <tbody>
                      {{#each pd}}
                      <tr>
                        <td>{{cantidad}}</td>
                        <td><img src="../../{{imagen}}" style="height: 100px; width:100px " class="card-img"></td>
                        <td>{{nombre}}</td>

                        <td>${{precio_venta}}</td>
                      </tr>
                      {{/each}}


                    </tbody>
                  </table>
                </div>
                <!-- /.col -->
              </div>
              <!-- /.row -->

              <div class="row">
                <!-- accepted payments column -->

                <!-- /.col -->


                <div class="col-6">


                  <div class="table-responsive">
                    <table class="table">
                      {{#each totales}}
                      <tr>
                        <th style="width:50%">Subtotal:</th>
                        <td>${{subtotal}}</td>
                      </tr>
                      <tr>
                        <th>Tax </th>
                        <td>${{tax}}</td>
                      </tr>

                      <tr>
                        <th>Total:</th>
                        <td>${{total}}</td>
                      </tr>
                      {{/each}}
                    </table>
                  </div>
                </div>
                <div class="col-6">
                   {{#each cod}}
                  <form action="/enviar/Transito/{{cod_factura}}" method="POST"> 
                       <div class="col-md-4 mb-3">
                    <label for="validationDefault02">Asigne un Repartidor</label>
                    <select id="categoria" name="id_persona" class="form-control">
                      <option selected>Seleccione una opcion</option>
                      {{#each ../r}}
                      <option value="{{id}}">{{nombre}}</option>
                      {{/each}}
                    </select>
                  </div>

                 
                   <button type="submit" class="btn btn-primary" style="color:rgb(230, 213, 213);">Enviar</button>

                       
                
                
                  </form>
                  {{/each}}

                </div>
                <!-- /.col -->
              </div>
              <!-- /.row -->


            </div>
            <!-- /.invoice -->
          </div><!-- /.col -->
        </div><!-- /.row -->
      </div><!-- /.container-fluid -->
    </section>
    <!-- /.content -->



  </div>
</div>