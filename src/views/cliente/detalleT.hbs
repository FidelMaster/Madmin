<div class="row" style="border-top-width: 1px; border-color: #e3ded1; border-top-style: solid; margin-right:100px;">




  <section class="content">
    <div class="container-fluid">
      <div class="row">
        <div class="col-12">



          <!-- Main content -->
          <div class="invoice p-3 mb-3">
            <!-- title row -->

            <!-- info row -->
            <div class="row invoice-info">

              <!-- /.col -->
              <div class="col-sm-4 invoice-col">

                <address>
                  {{#each persona}}
                  <strong>{{nombre}} {{apellido}}</strong><br>

                  celular: (505) {{celular}}<br>
                  Email: john.doe@example.com
                </address>
                {{/each}}
              </div>
              <!-- /.col -->
              <div class="col-sm-4 invoice-col">
                {{#each cod}}
                <b>Factura #{{id}}</b><br>
                <br>
                <b>Codigo Venta:</b> {{codVenta}}<br>
                <b>Fecha del Pedido:</b> {{fecha}}<br>

                {{/each}}
              </div>
              <!-- /.col -->
            </div>
            <!-- /.row -->

            <!-- Table row -->
            <div class="row">
              <div class="col-12 table-responsive">
                <table class="table table-striped">
                  <thead>

                    <tr>

                      <th>Cantidad</th>
                      <th>Imagen</th>
                      <th>Nombre</th>

                      <th>Subtotal</th>
                    </tr>

                  </thead>
                  <tbody>
                    {{#each pd}}
                    <tr>
                      <td>{{cantidad}}</td>
                      <td><img src="../{{imagen}}" style="height: 100px; width:100px " class="card-img"></td>
                      <td>{{nombre}}</td>

                      <td>${{precio}}</td>
                    </tr>
                    {{/each}}


                  </tbody>
                </table>
              </div>
              <!-- /.col -->
            </div>
            <!-- /.row -->

            <div class="row">
              <!-- accepted payments column -->

              <!-- /.col -->


              <div class="col-6">


                <div class="table-responsive">
                  <table class="table">
                    {{#each totales}}
                    <tr>
                      <th style="width:50%">Subtotal:</th>
                      <td>${{total}}</td>
                    </tr>
                    <tr>
                      <th>Tax </th>
                      <td>$0</td>
                    </tr>

                    <tr>
                      <th>Total:</th>
                      <td>${{total}}</td>
                    </tr>
                    {{/each}}
                  </table>
                </div>
              </div>
              <div class="col-6">
                {{#each cod}}
              
                <a class="btn btn-primary" href="http://localhost:4000/Recibir/Transito/{{codVenta}}"
                  style="color:rgb(230, 213, 213);">Enviar</a>

                
 
             
 
                {{/each}}
              </div>
              <!-- /.col -->
            </div>
            <!-- /.row -->


          </div>
          <!-- /.invoice -->
        </div><!-- /.col -->
      </div><!-- /.row -->
    </div><!-- /.container-fluid -->
  </section>
  <!-- /.content -->



</div>